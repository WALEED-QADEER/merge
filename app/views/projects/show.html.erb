<%= link_to 'Home', root_path %>
<h1>Project Name: <%= @project.name %></h1>
<p>Status : <%= @project.status %></p>
<p>Completion Date: <%= @project.date %></p>
<p>Project Creator ID: <%= @project.creator %></p>
<h2>
Tasks
</h2>
<ul>
<% @project.tasks.each do |task| %>
    <li>
    <%= link_to task.task_type, task %>
    </li>
    <% end %>
</ul>
<h2>Users Added:</h2>
<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
  </ul>
<% else %>
  <p>No user added yet.</p>
<% end %>




