<%= link_to 'Home', root_path %>
<br>
<br>
<%= form_tag "/tasks", method: "GET" do %>
  <%= label_tag :task_type %>
  <%= text_field_tag :search_by_taskname , params[:search_by_taskname ] %>
  <%= submit_tag "Search" %>
  <% end %>
<br>
<table  style = "border:2px solid black">
<tr>
    <th  style = "border:1px solid black">Task Type</th>
    <th  style = "border:1px solid black">Edit</th>
    <th  style = "border:1px solid black">Delete</th>
  </tr>
  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.task_type, task %></td>
    <td style = "border:1px solid black"><%= link_to "Edit", edit_task_path(task) %></td>
    <td  style = "border:1px solid black"><%= link_to "Destroy", task_path(task), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %></td>
  </tr>
  <% end %>
  </table>

<br>
<%= link_to "New Task", new_task_path %>